{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="container">
        <br><br><br>
        <h1>Utilisateurs</h1><br><br><br>

        {% include 'layouts/_flash_message.html.twig' %}
        <table class="table">
            <tr>
                <th>id</th>
                <th>mail</th>
                <th>nom</th>
                <th>prénom</th>
                <th>roles</th>
                <th>action</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>
                        {% if ('ROLE_ADMIN' in user.roles) %}
                            <span class="text-primary">administrateur</span>
                        {% elseif ('ROLE_EDITOR' in user.roles) %}
                            <span class="text-success">editeur</span>
                        {% else %}
                            <span class="text-secondary">client</span>
                        {# {% for role in user.roles %}
                            {{ role }} #}
                        {% endif %}
                    </td>
                    <td>
                        {% if ('ROLE_ADMIN') in user.roles == false %}
                            
                            {% if ('ROLE_EDITOR') in user.roles == false %}
                                <a onclick="return confirm('Voulez-vous vraiment affecter le rôle éditeur à cet utilisateur ?')" class="btn btn-outline-primary" href="{{ path('app_user_to_editor',{'id':user.id}) }}" >Ajouter comme éditeur</a>
                            {% else %}
                                <a onclick="return confirm('Voulez-vous vraiment retirer le rôle éditeur à cet utilisateur ?')" class="btn btn-danger" href="{{ path('app_user_remove_editor_role',{'id':user.id}) }}" >Retirer le rôle éditeur</a>
                            {% endif %}
                            
                            <a onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?')" href="{{ path('app_user_remove',{'id':user.id}) }}" class="btn btn-danger">Supprimer</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
