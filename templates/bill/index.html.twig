<style>
    table{
        width: 100%;
        border-collapse: collapse;
    }
    th, td{
        border: 1px solid #dddd;
        padding: 8px;
        text-align: left;
    }
    thead{
        background: #f2f2f2;
    }
    tbody tr:nth-child(odd){
        background: #f9f9f9;
    }
</style>
<div class="container">
    <h3>Facture n:{{ order.id }}</h3> <br>
    <span>Date: {{ order.createdAt|date }}</span>
    <hr></hr>
    <h5>Informations du client</h5>
    <table class="table table-bordered">
    <thead>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Tel</th>
        <th>Adresse</th>
        <th>Ville</th>
    </thead>
    <tr>
        <td>{{ order.firstName }}</td>
        <td>{{ order.lastName }}</td>
        <td>{{ order.phone }}</td>
        <td>{{ order.adress }}</td>
        <td>{{ order.city.name }}</td>
    </tr>
    </table> 
    <br>
    <h5>Corps de la commande</h5>
    <table class="table table-bordered">
    <thead>
        <th>Nom du produit</th>
        <th>Prix unitaire</th>
        <th>Quantité</th>
        <th>Prix total</th>
    </thead>
    {% for product in order.orderProducts %}
        <tr>
            <td>{{ product.product.name }}</td>
            <td>{{ product.product.price }} Eur</td>
            <td>{{ product.qte }}</td>
            <td>{{ product.product.price*product.qte }} Eur</td>
        </tr>
    {% endfor %}
    </table> 
    <br><br>
    <span>Frais de livraison : {{ order.city.shippingCost }} EUR</span>
    <hr></hr>
    <h2>Total à payer : {{ order.totalPrice }} EUR</h2>
</div>